<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cnep.cnepe_banking">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/cnep_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cnep_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PresentationLayer.View.LoginView" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" android:screenOrientation="portrait"/>
            </intent-filter>
        </activity>
        <activity android:name=".PresentationLayer.View.Accueil" android:screenOrientation="portrait"></activity>
        <activity android:name=".PresentationLayer.View.ListAgenceView" android:screenOrientation="portrait"></activity>
        <activity android:name=".PresentationLayer.View.ListCompteView" android:screenOrientation="portrait"></activity>
        <activity android:name=".PresentationLayer.View.ListCreditView" android:screenOrientation="portrait"/>
        <activity android:name=".PresentationLayer.View.ListMouvementView" />
        <activity android:name=".PresentationLayer.View.ListAllAgencesView" />
        <activity android:name=".PresentationLayer.View.AgenceDetailledView" />
        <activity android:name=".PresentationLayer.View.CompteDetailledView" />
        <activity android:name=".PresentationLayer.View.ProfileView" />
        <activity android:name=".PresentationLayer.View.ChangementInformationView" />
        <activity android:name=".PresentationLayer.View.ChangementMotDePasseView" />
    </application>

</manifest>