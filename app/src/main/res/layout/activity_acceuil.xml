<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cnep.cnepe_banking.PresentationLayer.View.Accueil"
    android:background="#f2f2f2">

    <Button
        android:id="@+id/bAgences"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Agences"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@+id/bComptes"
        app:layout_constraintLeft_toLeftOf="@+id/bComptes"
        android:background="@drawable/shape"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="-7dp" />

    <Button
        android:id="@+id/bMaps"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Agences et dab aux alentours"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@+id/bCredits"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/bCredits"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/bComptes"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/shape"
        android:text="Mes comptes"
        android:textColor="@android:color/background_light"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bCredits"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bCredits"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="176dp"
        android:text="Mes CrÃ©dits"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape"
        android:textColor="@android:color/background_light"/>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_accueille"
        android:gravity="center_horizontal"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:background="?attr/colorBackgroundFloating"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp" />

</android.support.constraint.ConstraintLayout>
