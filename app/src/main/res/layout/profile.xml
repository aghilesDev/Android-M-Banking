<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorBackgroundFloating"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_constraintTop_creator="1" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cadre_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cadre_agence"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_profile">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Telephone:"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/nisUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="TextView"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tNis"
            app:layout_constraintTop_toTopOf="@+id/tNis" />

        <TextView
            android:id="@+id/adresseUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="TextView"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/textView30"
            app:layout_constraintTop_toTopOf="@+id/textView30" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Adresse:"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/tPrenomUser"
            app:layout_constraintTop_toBottomOf="@+id/tPrenomUser" />

        <TextView
            android:id="@+id/tNif"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="NIF:"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/prenomUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="TextView"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tPrenomUser"
            app:layout_constraintTop_toTopOf="@+id/tPrenomUser" />

        <TextView
            android:id="@+id/telephoneUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="TextView"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19" />

        <TextView
            android:id="@+id/tPrenomUser"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Prenom:"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/tNomUser"
            app:layout_constraintTop_toBottomOf="@+id/tNomUser" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="E-mail:"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/adresseUser" />

        <TextView
            android:id="@+id/emailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="TextView"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <TextView
            android:id="@+id/nomUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="TextView"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tNomUser"
            app:layout_constraintTop_toTopOf="@+id/tNomUser" />

        <TextView
            android:id="@+id/tNomUser"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nom:"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nifUer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="TextView"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tNif"
            app:layout_constraintTop_toTopOf="@+id/tNif" />

        <TextView
            android:id="@+id/tNis"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="NIS:"
            android:textColor="#444444"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/tNif"
            app:layout_constraintTop_toBottomOf="@+id/tNif" />
    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar_profile"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/NoConnectionProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#efe8e8"
        android:text="No Connection"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bTelephoneUser"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/button_circle_selector"
        android:text="changement telephone"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bEmailUser"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/bAdresseUser"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/button_circle_selector"
        android:text="changement adresse"
        android:textColor="@android:color/background_light"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bTelephoneUser"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bEmailUser"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:background="@drawable/button_circle_selector"
        android:text="changement  e-mail"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/bTelephoneUser"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bMotDePasseUser"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_circle_selector"
        android:text="changement mot de passe"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bEmailUser"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>